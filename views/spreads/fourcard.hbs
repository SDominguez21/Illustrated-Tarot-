<h2 class="header">Clarification Spread</h2>

<div class="first-row">
  <div class="singlecard-container">
    <img src={{firstCard.img}} alt="test">
    <div class="cardinfo hidden">
      <p>{{firstCard.name}}</p>
      <p>{{firstCard.category}}</p>
      <p>{{firstCard.suit}}</p>
      <p>{{firstCard.keywords}}</p>
      <p>{{firstCard.description}}</p>
    </div>
  </div>
</div>


<div class="second-row">
  {{#each clarification}}
  <div class="singlecard-container cardtoreveal makenicer">
    <img src={{this.img}} alt="test">
    <div class="cardinfo hidden">
      <p>{{this.name}}</p>
      <p>{{this.category}}</p>
      <p>{{this.suit}}</p>
      <p>{{this.keywords}}</p>
      <p>{{this.description}}</p>
    </div>
  </div>
  {{/each}}
</div>


<div class="comment">
  {{#each savedSpread.comments}}
  <p class="text">{{this.note}}</p>
  <p class="commentTime">{{this.time}}</p>
  {{/each}}
</div>

<div class="dlt-sv-nicer">
  <form method="POST" action="/spreads/comment/{{savedSpread._id}}">
    <textarea name="note" id="textarea-onecard" cols="30" rows="10" placeholder="Notes:"></textarea> <button
      class="btn saveBtn">Save</button> </form>

  <form action="/spreads/{{savedSpread._id}}/delete"><button class="deleteBtn btn fourcarddelete">Delete</button></form>
  <script src="../javascripts/fourcard.js"></script>
</div>